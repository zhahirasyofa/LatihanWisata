<!-- File: res/drawable/card_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="#FFFFFF" /> <!-- Warna latar belakang -->

    <!-- Efek bayangan atau border -->
    <stroke
        android:width="1dp"
        android:color="#E0E0E0" /> <!-- Warna outline abu-abu terang -->

    <!-- Membuat sudut rounded -->
    <corners android:radius="8dp" /> <!-- Sesuaikan radius sesuai kebutuhan -->

    <!-- Padding di dalam shape -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>